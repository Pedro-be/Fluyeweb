    }
  }
  .hero-media{
    img{
      position: absolute;
      width: 160px;
      &:nth-child(1){
        top: 0;
        left: -100px;
      }
      &:nth-child(2){
        top: 0;
        right: -100px;
      }
      &:nth-child(3){
        top: 250px;
        left: 0;
      }
      &:nth-child(4){
        top: 250px;
        right: 0;
      }
      &:nth-child(5){
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    @media (max-width:700px) {
      img{
        &:nth-child(2), &:nth-child(3),
        &:nth-child(4){
          display: none;
        }
      }
    }
  }
}

